@model Company

<div class="card border-0 shadow my-4 ">
    <div class="card-header bg-gradient bg-secondary py-3 ms-0">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@(Model.Id ==0 ? "Create": "Update") Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Id" hidden />
            <div class="row">
                <div class="col-12">
                    <div class="border p-3 mt-4">

                        <div class="form-floating py-2 col-12">
                            <input asp-for="Name" class="form-control border-0 shadow">
                            <label class="ms-2" asp-for="Name"></label>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="PhoneNumber" class="form-control border-0 shadow">
                            <label class="ms-2" asp-for="PhoneNumber"></label>
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>

                        </div>
                        
                        <div class="form-floating py-2 col-12">
                            <input asp-for="StressAddress" class="form-control border-0 shadow">
                            <label class="ms-2" asp-for="StressAddress"></label>
                            <span asp-validation-for="StressAddress" class="text-danger"></span>

                        </div>   <div class="form-floating py-2 col-12">
                            <input asp-for="City" class="form-control border-0 shadow">
                            <label class="ms-2" asp-for="City"></label>
                            <span asp-validation-for="City" class="text-danger"></span>

                        </div>   <div class="form-floating py-2 col-12">
                            <input asp-for="State" class="form-control border-0 shadow">
                            <label class="ms-2" asp-for="State"></label>
                            <span asp-validation-for="State" class="text-danger"></span>

                        </div>   <div class="form-floating py-2 col-12">
                            <input asp-for="PostalCode" class="form-control border-0 shadow">
                            <label class="ms-2" asp-for="PostalCode"></label>
                            <span asp-validation-for="PostalCode" class="text-danger"></span>

                        </div>
                        
                        <div class="row pt-2">
                            <div class="col-6 col-md-3">
                                @if (Model.Id != 0)
                                {
                                    <button type="submit" class="btn btn-primary form-control">Update</button>

                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control">Create</button>

                                }
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="Company" asp-action="Index" class="btn btn-outline-secondary form-control">
                                    Back to List
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
           
        </form>
    </div>
</div>




@section Scripts {
    <script>
  tinymce.init({
    selector: 'textarea',
    plugins: 'anchor autolink charmap codesample emoticons image link lists  table visualblocks',
    toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | align lineheight | checklist numlist bullist indent outdent | emoticons charmap ',
  });
    </script>
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
