@model Product

<div class="card border-0 shadow my-4 ">
    <div class="card-header bg-gradient bg-secondary py-3 ms-0">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <div class="border p-3 mt-4">
                <div asp-validation-summary="All"></div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="Title" class="form-control border-0 shadow">
                    <label class="ms-2" asp-for="Title"></label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Author" class="form-control border-0 shadow">
                    <label class="ms-2" asp-for="Author"></label>
                    <span asp-validation-for="Author" class="text-danger"></span>

                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Description" class="form-control border-0 shadow">
                    <label class="ms-2" asp-for="Description"></label>
                    <span asp-validation-for="Description" class="text-danger"></span>

                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ISBN" class="form-control border-0 shadow">
                    <label class="ms-2" asp-for="ISBN"></label>
                    <span asp-validation-for="ISBN" class="text-danger"></span>

                </div>   <div class="form-floating py-2 col-12">
                    <input asp-for="ListPrice" class="form-control border-0 shadow">
                    <label class="ms-2" asp-for="ListPrice"></label>
                    <span asp-validation-for="ListPrice" class="text-danger"></span>

                </div>   <div class="form-floating py-2 col-12">
                    <input asp-for="Price" class="form-control border-0 shadow">
                    <label class="ms-2" asp-for="Price"></label>
                    <span asp-validation-for="Price" class="text-danger"></span>

                </div>   <div class="form-floating py-2 col-12">
                    <input asp-for="Price50" class="form-control border-0 shadow">
                    <label class="ms-2" asp-for="Price50"></label>
                    <span asp-validation-for="Price50" class="text-danger"></span>

                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price100" class="form-control border-0 shadow">
                    <label class="ms-2" asp-for="Price100"></label>
                    <span asp-validation-for="Price100" class="text-danger"></span>

                </div>
                <div class="form-floating py-2 col-12">
                    <select asp-for="CatagoryID" asp-items="ViewBag.ListCategories" class="form-select border-0 shadow">
                        <option selected disabled>--Select Category--</option>

                    </select>
                    <label class="ms-2" asp-for="CatagoryID"></label>
                    <span asp-validation-for="CatagoryID" class="text-danger"></span>

                </div>
                <div class="row">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Create</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>




@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
